body
{
  margin: 0px;
}
nav
{
  position: fixed;
  height: 60px;
  margin-top: -60px;
  background-color: white;
  width: 100%;
  box-shadow: 0px -3px 7px 0px rgba(0,0,0,0.75);
  z-index: 1;
}

nav ul
{
  display: flex;
  justify-content: space-around;
  list-style: none;
  height: auto;
}

header
{
  margin-top: 60px;
  height: 300px;
}

section
{
  padding: 0px 25px 0px 25px;
}

h1
{
  color: #e4c600;
}

h2
{
  color: #e4c600;
}

h3
{
  color: #e4c600;
}

input
{
  width: 100%;
  padding: 12px 20px;
  margin: 8px 0;
  box-sizing: border-box;
}

textarea
{
  width: 100%;
  padding: 12px 20px;
  margin: 8px 0;
  box-sizing: border-box;
}

footer
{
  width: 100%;
  height: auto;
  color: black;
  text-align: center;
  box-shadow: 0px -3px 7px -7px rgba(0,0,0,0.75);
}

header
{
  box-shadow: 0px 0px 10px 2px rgba(0,0,0,0.75);
  height: 300px;
  width: 100%;
}

#steps
{
  margin-top: 100px;
}
#logo
{
  position: fixed;
  margin-top: -60px;
  padding: 5px;
  z-index: 2;
}

#cook
{
  margin-top:  80px;
}

#headerDescription
{
  position: relative;
  padding: 20px;
  text-align: center;
  color: white;
  background-color: rgba(0, 0, 0, 0.5);
  height: 260px;
}

.headerBackground
{
  position: absolute;
  height: 300px;
  width: auto;
}

.profilPicture
{
  border-radius: 10px;
}

.publicationNoteCook
{
  position: absolute;
  margin-top: -25px
}

.button
{
  display: inline-block;
  width: 100%;
  background-color: #3491b2;
  border-radius: 3px;
  /* border-bottom: 3px solid #3B89B3; */
  color: white;
  font-size: 1em;
  text-decoration: none;
}

.button:hover
{
  display: inline-block;
  width: auto;
  background-color: white;
  border-radius: 3px;
  /* border-bottom: 3px solid #3491b2; */
  color: #3B89B3;
  font-size: 1em;
  text-decoration: none;
  width: 100%;
}

.buttonSlider
{
  display: inline-block;
  width: 100%;
  background-color: #3491b2;
  border-radius: 3px;
  /* border-bottom: 3px solid #3B89B3; */
  color: white;
  font-size: 1em;
  text-decoration: none;
}

.buttonSlider:hover
{
  display: inline-block;
  width: auto;
  background-color: white;
  border-radius: 3px;
  /* border-bottom: 3px solid #3491b2; */
  color: #3B89B3;
  font-size: 1em;
  text-decoration: none;
  width: 100%;
}

.conteneur
{
  display: flex;
  flex-direction: column;
}
.element
{
    padding: 10px;
    margin: auto;
    width: 100%;
}

.listRecipe
{

}

.colorMain
{
  color: #e4c600;
}

@media screen and (min-width: 600px)
{
  .conteneur
  {
    display: flex;
    flex-direction: row;
    justify-content: center;
  }
